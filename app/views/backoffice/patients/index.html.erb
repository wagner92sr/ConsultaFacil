
<h1 class="page-header">Pacientes</h1>

<div class="panel panel-default">
    <div class="panel-heading">
        Pacientes cadastrados no sistema 
        <%= link_to new_backoffice_patient_path, class:"btn btn-success btn-circle pull-right", style:"margin-top: -5px" do %>
        <i class="fa fa-plus"></i>
        <% end %>
    </div>
    <!-- /.panel-heading -->
    <div class="panel-body">
        <div class="table-responsive">
            <table class="table table-striped table-bordered table-hover">
                <thead>                                            
                    <tr>
                        <th>Id</th>
                        <th>Nome</th>
                        <th>Endere√ßo</th>
                        <th>Cidade</th>
                        <th>Telefone</th>
                        <th></th>
                    </tr>                                            
                </thead>
                <tbody>
                    <% @patients.each do |patient| %>
                    <tr>
                        <td><%= patient.id %></td>                                              
                        <td><%= patient.name %></td>                                                
                        <td><%= patient.address %></td>                                                
                        <td><%= patient.city %></td> 
                        <td><%= patient.phone %></td> 
                        <td style="width: 90px">
                            <%= link_to edit_backoffice_patient_path(patient.id), class: "btn btn-info btn-circle" do %>
                            <i class="fa fa-edit"></i>
                            <% end %>
                            <button type="button" class="btn btn-danger btn-circle" disabled="disabled"><i class="fa fa-minus"></i>
                            </button>
                        </td>
                    </tr>
                    <% end %>                                           
                </tbody>
            </table>
        </div>
        <!-- /.table-responsive -->
    </div>
    <!-- /.panel-body -->
</div>
