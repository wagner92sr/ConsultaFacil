
<h1 class="page-header">Cadastro Internacional de Doenças</h1>

<% if @cid.errors.any? %>
<div class="alert alert-danger alert-dismissable">
    <button type="button" class="close" data-dismiss="alert" aria-hidden="true">×</button>
    <ul>
        <% @cid.errors.full_message.each do |message|%>
        <li><%= message %></li>
        <% end %>
    </ul>
</div>
<% end %>

<div class="panel panel-default">
    <div class="panel-heading">
        <%= action %>
    </div>
    <!-- /.panel-heading -->
    <div class="panel-body">
     <div class="col-lg-6">
        <%= form_for([:backoffice, @cid]) do |f| %>
        <div class="form-group">
           <label>CID</label>
           <%= f.text_field :cid, class:"form-control", placeholder:"A66-2" %>
           <label>Nome</label>
           <%= f.text_field :name, class:"form-control", placeholder:"Câncer xx" %>         
       </div>
       <button type="submit" class="btn btn-default">Salvar</button>
       <% end %>
   </div>

   <!-- /.table-responsive -->
</div>
<!-- /.panel-body -->
</div>

      