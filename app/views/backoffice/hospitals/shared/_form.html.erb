
<h1 class="page-header">Hospitais</h1>

<% if @hospital.errors.any? %>
<div class="alert alert-danger alert-dismissable">
    <button type="button" class="close" data-dismiss="alert" aria-hidden="true">×</button>
    <ul>
        <% @hospital.errors.full_message.each do |message|%>
        <li><%= message %></li>
        <% end %>
    </ul>
</div>
<% end %>

<div class="panel panel-default">
    <div class="panel-heading">
        <%= action %>
    </div>
    <!-- /.panel-heading -->
    <div class="panel-body">
     <div class="col-lg-6">
        <%= form_for([:backoffice, @hospital]) do |f| %>
        <div class="form-group">
           <label>Nome</label>
           <%= f.text_field :name, class:"form-control", placeholder:"Nome do hospital" %>
           <label>Endereço</label>
           <%= f.text_field :address, class:"form-control", placeholder:"Endereço" %>
           <label>Cidade</label>
           <%= f.text_field :city, class:"form-control", placeholder:"Cidade" %>
           <label>Telefone</label>
           <%= f.telephone_field :phone, class:"form-control", placeholder:"3333-3333" %>
           <label>Descrição</label>
           <%= f.text_area :description, class:"form-control", placeholder:"Descrição do hospital" %>
           <label>Foto</label> <br>
           <%= image_tag @hospital.picture.url(:medium), class:"img-thumbnail" %>
           <label></label>
           <%= f.file_field :picture %>
       </div>
       <button type="submit" class="btn btn-default">Salvar</button>
       <% end %>
   </div>

   <!-- /.table-responsive -->
</div>
<!-- /.panel-body -->
</div>

      