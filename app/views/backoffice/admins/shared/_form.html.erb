
<h1 class="page-header">Administradores</h1>

<% if @admin.errors.any? %>
<div class="alert alert-danger alert-dismissable">
    <button type="button" class="close" data-dismiss="alert" aria-hidden="true">×</button>
    <ul>
        <% @admin.errors.full_message.each do |message|%>
        <li><%= message %></li>
        <% end %>
    </ul>
</div>
<% end %>

<div class="panel panel-default">
    <div class="panel-heading">
        <%= action %>
    </div>
    <!-- /.panel-heading -->
    <div class="panel-body">
     <div class="col-lg-6">
        <%= form_for([:backoffice, @admin]) do |f| %>
        <div class="form-group">
           <label>Nome</label>
           <%= f.text_field :name, class:"form-control", placeholder:"Joãozinho da Silva" %>
           <label>E-mail</label>
           <%= f.text_field :email, class:"form-control", placeholder:"admin1@admin.com" %>
           <label>Senha</label>
           <%= f.password_field :password, class:"form-control", placeholder:"teste123" %>
           <label>Confirmação de senha</label>
           <%= f.password_field :password_confirmation, class:"form-control", placeholder:"teste123" %>          
       </div>
       <button type="submit" class="btn btn-default">Salvar</button>
       <% end %>
   </div>

   <!-- /.table-responsive -->
</div>
<!-- /.panel-body -->
</div>

      