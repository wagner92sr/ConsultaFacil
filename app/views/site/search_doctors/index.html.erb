<% @doctors.each do |doctor| %>
<!-- Page Content -->
    <div class="container">

        <!-- Page Heading -->
        <div class="row">
            <div class="col-lg-12">
                <h1 class="page-header">
                </h1>
            </div>
        </div>
        <!-- /.row -->

         <% unless @doctors.blank? %>
            <!-- Project One -->
            <div class="row">
                <div class="col-md-5">
                    <a href="#">
                        <%= image_tag doctor.picture.url(:medium), class:"img-thumbnail" %>
                    </a>
                </div>
                
                <div class="col-md-5">
                    <h3><%= doctor.name %></h3>
                    <p>Cidade:<%= doctor.city %></p>
                    <p>CRM:   <%= doctor.crm %></p>
                    <p>Telefone:<%= doctor.phone %></p>
                    <p>Especialidade: <%= doctor.skill %></p>
                    <%= link_to "Detalhes",site_search_doctor_path(doctor.id), class:"btn btn-primary"  %>
                    <i class="fa fa-minus"></i>
                </div>
                
            </div>
            <!-- /.row -->
        <% end %>
    </div>
    <!-- /.container -->
<% end %> 