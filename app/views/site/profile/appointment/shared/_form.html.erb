<% if @appointment.errors.any? %>
	<div class="alert alert-danger alert-dismissable">
    <button type="button" class="close" data-dismiss="alert" aria-hidden="true">Ã—</button>
    <ul>
        <% @appointment.errors.full_messages.each do |message|%>
        <li><%= message %></li>
        <% end %>
    </ul>
</div>
<% end %>

<%= form_for([:site, :profile, @appointment]) do |f| %>
	<form>
	  <div class="row">
		  <div class="col-xs-3">
			  <div class="form-group">
			  	<%= f.label :date %>
			  	<%= f.date_field :date, class: "form-control" %>
		 	  </div>	
		  </div>
	   </div>

	   <div class="row">
		  <div class="col-xs-3">
			  <div class="form-group">
			  	<%= f.label :hospital %>
			  	<%= f.collection_select :hospital_id, Hospital.all, :id, :name, {},{class: "form-control"}  %>
		 	  </div>	
		  </div>
	   </div>

	   <div class="row">
		  <div class="col-xs-3">
			  <div class="form-group">
			  	<%= f.label :doctor %>
			  	<%= f.collection_select :doctor_id, Doctor.all, :id, :name, {}, {class: "form-control"} %>
		 	  </div>	
		  </div>
	   </div>

	   <div class="row">
		  <div class="col-xs-3">
			  <div class="form-group">
			  	<%= f.label :paciente %>
			  	<%= f.collection_select :paciente_id, Paciente.all, :id, :email,{}, { class: "form-control"} %>
		 	  </div>	
		  </div>
	   </div>

	   <div class="row">
		  <div class="col-xs-5">
			  <div class="form-group">
			  	<%= f.label :observations %>
			  	<%= f.text_area :observations, class: "form-control", rows: 10 %>
		 	  </div>	
		  </div>
	   </div>

	   <%= submit_tag "Enviar",  class:"btn btn-default" %>
	  
	</form>
<% end %>