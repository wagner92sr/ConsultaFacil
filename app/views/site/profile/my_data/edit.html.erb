<%= content_for :javascripts do %>
  <%= javascript_include_tag 'site/profile/appointment.js' %>
<% end %>

<h1>Meus dados</h1>

<% if @profile_member.errors.any? %>
    <div class="alert alert-danger alert-dismissable">
    <button type="button" class="close" data-dismiss="alert" aria-hidden="true">×</button>

    <ul>
        <% @profile_member.errors.full_messages.each do |message| %>
            <li><%= message %></li>
        <% end %>
    </ul>

    </div>
<% end %>

<%= form_for(@profile_member, url: site_profile_my_datum_path(@profile_member)) do |f| %>

  <div class="row">
    <div class="col-xs-6">
      <div class="form-group">
        <%= f.label :first_name %>
        <%= f.text_field :first_name, class: "form-control", placeholder: "Primeiro Nome" %>
      </div>
    </div>
  </div>

  <div class="row">
    <div class="col-xs-6">
      <div class="form-group">
        <%= f.label :second_name %>
        <%= f.text_field :second_name, class: "form-control", placeholder: "Sobrenome" %>
      </div>
    </div>
  </div>

  <div class="row">
    <div class="col-xs-3">
      <div class="form-group">
        <%= f.label :birthdate %>
        <%= f.text_field :birthdate, class: "form-control datetimepicker", value: (l(@profile_member.birthdate) unless @profile_member.birthdate.blank?) %>
      </div>
    </div>
  </div>

  <div class="row">
    <div class="col-xs-6">
      <div class="form-group">
        <%= f.label :mother_name %>
        <%= f.text_field :mother_name, class: "form-control", placeholder: "Nome da mãe" %>
      </div>
    </div>
  </div>

  <%= submit_tag "#{t('buttons.send')}", class: "btn btn-default"  %>
<% end %>

