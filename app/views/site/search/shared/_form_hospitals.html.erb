<% @hospitals.each do |hospital| %>
<!-- Page Content -->
    <div class="container">

        <!-- Page Heading -->
        <div class="row">
            <div class="col-lg-12">
                <h1 class="page-header">
                </h1>
            </div>
        </div>
        <!-- /.row -->

         <% unless @hospitals.blank? %>
            <!-- Project One -->
            <div class="row">
                <div class="col-md-5">
                    <a href="#">
                        <%= image_tag hospital.picture.url(:medium), class:"img-thumbnail" %>
                    </a>
                </div>
                
                <div class="col-md-5">
                    <h3><%= hospital.name %></h3>
                    <p><%= hospital.description %></p>
                    <a class="btn btn-primary" href="#">Detalhes<span class="glyphicon glyphicon-chevron-right"></span></a>
                </div>
                
            </div>
            <!-- /.row -->
        <% end %>
    </div>
    <!-- /.container -->
<% end %> 

